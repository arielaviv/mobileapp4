<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.company.assignment4.LoginFragment"
        android:label="@string/login_title"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_studentsListFragment"
            app:destination="@id/studentsListFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.company.assignment4.RegisterFragment"
        android:label="@string/register_title"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_registerFragment_to_studentsListFragment"
            app:destination="@id/studentsListFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/studentsListFragment"
        android:name="com.company.assignment4.StudentsListFragment"
        android:label="@string/students_list_title"
        tools:layout="@layout/fragment_students_list">

        <action
            android:id="@+id/action_studentsListFragment_to_newStudentFragment"
            app:destination="@id/newStudentFragment" />

        <action
            android:id="@+id/action_studentsListFragment_to_studentDetailsFragment"
            app:destination="@id/studentDetailsFragment" />

        <action
            android:id="@+id/action_studentsListFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/studentsListFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/newStudentFragment"
        android:name="com.company.assignment4.NewStudentFragment"
        android:label="@string/new_student_title"
        tools:layout="@layout/fragment_new_student" />

    <fragment
        android:id="@+id/studentDetailsFragment"
        android:name="com.company.assignment4.StudentDetailsFragment"
        android:label="@string/student_details_title"
        tools:layout="@layout/fragment_student_details">

        <argument
            android:name="studentId"
            app:argType="string" />

        <action
            android:id="@+id/action_studentDetailsFragment_to_editStudentFragment"
            app:destination="@id/editStudentFragment" />
    </fragment>

    <fragment
        android:id="@+id/editStudentFragment"
        android:name="com.company.assignment4.EditStudentFragment"
        android:label="@string/edit_student_title"
        tools:layout="@layout/fragment_edit_student">

        <argument
            android:name="studentId"
            app:argType="string" />
    </fragment>

</navigation>
